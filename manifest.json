{
	"manifest_version": 2,
	"name": "__MSG_appName__",
	"default_locale": "en",
	"version": "1.1.1",
	"description": "__MSG_appDescription__",
     "background": {
        "scripts": ["background.js"],
    	"persistent": true
     },
	"icons": {
		"16": "tps_16.png",
		"32": "tps_32.png",
		"64": "tps_64.png",
		"96": "tps_96.png",
		"128": "tps_128.png"
	},
	"content_scripts": [
		{
			"matches": ["http://*/*", "https://*/*"],
			"js": ["content.js"],
			"run_at":"document_end"
		}
	],
	"permissions": [
		"windows",
		"tabs",
		"contextMenus",
		"activeTab",
		"storage",
		"http://*/*",
		"https://*/*",
		"<all_urls>"
	],
	"browser_action": {
		"default_icon": "tps_16.png",
		"default_title":"Tab Preview Switcher",
		"default_popup": "popup.html"
	},
	"options_ui": {
		"page": "options.html",
		"open_in_tab": false
	},
	"web_accessible_resources": [
		"whitepaper.png",
		"close.png"
	]
}