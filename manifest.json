{
	"manifest_version": 2,
	"name": "Tab Preview Switcher",
	"version": "1.0",
	"description": "Tab Preview Switcher",
     "background": {
        "scripts": ["background.js"],
    	"persistent": false
     },
	"icons": {
		"16": "tps_16.png",
		"32": "tps_32.png"
	},
	"content_scripts": [
		{
			"matches": ["http://*/*", "https://*/*"],
			"js": ["content.js"],
			"run_at":"document_end"
		}
	],
	"permissions": [
		"windows",
		"tabs",
		"contextMenus",
		"http://*/*",
		"https://*/*"
	],
	"browser_action": {
		"default_icon": "tps_16.png",
		"default_title":"Tab Preview Switcher",
		"default_popup": "popup.html"
	}
}