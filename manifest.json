{
	"manifest_version": 3,
	"name": "__MSG_appName__",
	"default_locale": "en",
	"version": "1.5",
	"description": "__MSG_appDescription__",
    "background": {
        "service_worker": "background.js"
     },
	"permissions": [
		"windows",
		"tabs",
		"activeTab",
		"storage",
		"tabGroups",
		"http://*/*",
		"https://*/*",
		"<all_urls>"
	],
	"icons": {
		"16": "tps_16.png",
		"32": "tps_32.png",
		"64": "tps_64.png",
		"96": "tps_96.png",
		"128": "tps_128.png"
	},
	"content_scripts": [
		{
			"matches": ["http://*/*", "https://*/*"],
			"js": ["content.js"],
			"run_at":"document_end"
		}
	],
	"action": {
		"default_icon": "tps_16.png",
		"default_title":"Tab Preview Board",
		"default_popup": "popup.html"
	},
	"options_ui": {
		"page": "options.html",
		"open_in_tab": false
	},
	"web_accessible_resources": [
		{
			"resources": [
				"whitepaper.png",
				"close.png"
			],
			"matches": [
				"http://*/*", 
				"https://*/*"
			]
		}

	]
}