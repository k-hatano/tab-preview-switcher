{
	"manifest_version": 2,
	"name": "Tab Preview Switcher",
	"version": "1.0.1",
	"description": "You can switch tabs with seeing their previews",
     "background": {
        "scripts": ["background.js"],
    	"persistent": true
     },
	"icons": {
		"16": "tps_16.png",
		"32": "tps_32.png",
		"64": "tps_64.png",
		"96": "tps_96.png",
		"128": "tps_128.png"
	},
	"content_scripts": [
		{
			"matches": ["http://*/*", "https://*/*"],
			"js": ["content.js"],
			"run_at":"document_end"
		}
	],
	"permissions": [
		"windows",
		"tabs",
		"contextMenus",
		"activeTab",
		"http://*/*",
		"https://*/*",
		"<all_urls>"
	],
	"browser_action": {
		"default_icon": "tps_16.png",
		"default_title":"Tab Preview Switcher",
		"default_popup": "popup.html"
	}
}